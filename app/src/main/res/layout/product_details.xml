<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row1">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelTitle"
            android:text="@string/title_label"/>

        <TextView
            android:id="@+id/bookTitle"
            style="@style/detail_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row2">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelAuthor"
            android:text="@string/author_label"/>

        <TextView
            android:id="@+id/bookAuthor"
            style="@style/detail_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelPrice"
            android:text="@string/price_label"/>

        <TextView
            android:id="@+id/bookPrice"
            style="@style/detail_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row4">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelQuantity"
            android:text="@string/quantity_label"/>

        <TextView
            android:id="@+id/bookQuantity"
            style="@style/detail_style" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row5">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelSupName"
            android:text="@string/supplier_name_label"/>

        <TextView
            android:id="@+id/bookSupplier"
            style="@style/detail_style" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row6">

        <TextView
            style="@style/detail_style"
            android:id="@+id/labelSupPhone"
            android:text="@string/supplier_phone_label"/>

        <TextView
            android:id="@+id/bookSupPhone"
            style="@style/detail_style" />

    </LinearLayout>













    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/medium_spacing">

        <Button
            android:id="@+id/increase"
            style="@style/button_style"
            android:text="@string/increase_button" />

        <Button
            android:id="@+id/decrease"
            style="@style/button_style"
            android:text="@string/decrease_button" />

        <Button
            android:id="@+id/order"
            style="@style/button_style"
            android:text="@string/order_button" />

        <Button
            android:id="@+id/delete"
            style="@style/button_style"
            android:text="@string/delete_button" />

    </LinearLayout>



</RelativeLayout>